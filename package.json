{
  "name": "cbm-writing-spelling-tool",
  "version": "3.0.0",
  "private": true,
  "engines": {
    "node": ">=20 <23"
  },
  "scripts": {
    "dev": "next dev",
    "prebuild": "node scripts/check-node.mjs",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest --ui",
    "test:run": "vitest run",
    "smoke:lt": "curl -s -o /dev/null -w \"%{http_code}\\n\" -X POST http://localhost:3000/api/languagetool/v1/check -H 'content-type: application/json' --data '{\"text\":\"We was runned fast.\",\"language\":\"en-US\"}'",
    "smoke:llm": "curl -s -o /dev/null -w \"%{http_code}\\n\" -X POST http://localhost:3000/api/verifier -H 'content-type: application/json' --data '{\"text\":\"sample\",\"mode\":\"quick\"}'",
    "size:report": "du -sh node_modules/* | sort -h | tail -n 30",
    "analyze": "ANALYZE=1 NODE_OPTIONS='--max-old-space-size=4096' next build",
    "ocr:score": "node scripts/ocr-score.js"
  },
  "dependencies": {
    "@google-cloud/vision": "^5.3.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "dotenv": "^16.4.5",
    "framer-motion": "^10.16.16",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.2",
    "lucide-react": "^0.294.0",
    "next": "^15.5.3",
    "pdfjs-dist": "^4.6.82",
    "pg": "^8.16.3",
    "react": "^18",
    "react-dom": "^18",
    "sharp": "^0.33.5",
    "tailwind-merge": "^2.2.0",
    "tesseract.js": "^5.1.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.2",
    "@types/jspdf": "^1.3.3",
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "^15.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
